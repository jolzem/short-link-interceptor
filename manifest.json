{
  "manifest_version": 2,
  "name": "Short Link Interceptor",
  "version": "1.0",

  "description": "Add a confirmation page when clicking on shortened links.",

  "icons" : {
    "48": "icons/icon.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://bit.ly/",
    "*://tiny.cc/",
    "*://tiny.one/",
    "*://tinyurl.com/",
    "*://is.gd/",
    "*://urlz.fr/",
    "*://snip.ly/",
    "*://rb.gy/",
    "*://cutt.ly/",
    "*://t.ly/"
  ],

  "background": {
    "scripts": ["background.js"]
  }
}

